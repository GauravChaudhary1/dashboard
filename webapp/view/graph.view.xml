<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="grc.pc.rep.dashboard.controller.graph"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:controls="grc.pc.rep.dashboard.Control"
	xmlns:viz="sap.viz.ui5.controls">
	<App id="idAppControl">
		<pages>
			<Page>
				<content>
					<viz:VizFrame  xmlns="sap.viz" 
								   id="idStackedChart"  
								   vizType="column" 
								   width="100%" 
								   height="100%">
					</viz:VizFrame>
				</content>
				<footer>
					<Toolbar>
						<ToolbarSpacer />
						<Button id="idMic" icon="sap-icon://microphone" press="onListenCommand"/>
					</Toolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>